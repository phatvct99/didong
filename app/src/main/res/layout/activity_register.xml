<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registerscreen_gradient1"
        android:alpha="0.9"
        />
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/loginText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Đăng kí"
                android:textColor="#000000"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="28dp"

                />

            <TextView
                android:id="@+id/loginText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Tạo tài khoản"
                android:textColor="#000000"
                android:textFontWeight="@android:integer/config_shortAnimTime"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/htLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corners"
                android:hint="Name"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/HoTenText"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="true"
                    android:drawableLeft="@drawable/ic_person"

                    android:drawablePadding="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sdtLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corners"
                android:hint="Số điện thoại"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sdtText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                android:hint="Mô tả"
                android:id="@+id/motalayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/motaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_description"
                    android:drawablePadding="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                android:hint="Giới tính"
                android:id="@+id/gioitinhlayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/gioitinhText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_wc"
                    android:drawablePadding="10dp"


                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#BDC3C7"
                android:hint="Địa chỉ"
                android:theme="@style/EditTextStyle"
                android:id="@+id/diachiLayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/diachiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10dp"


                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                android:id="@+id/taikhoanLayout"
                android:hint="Email của bạn"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taikhoanText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_baseline_email_24"

                    android:drawablePadding="10dp"

                    android:paddingLeft="20dp"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/matkhauLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corners"
                android:hint="Mật khẩu"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/ic_baseline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/matkhauText"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textColorHint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/xacnhanLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corners"
                android:hint="Xác nhận mật khẩu"
                android:textColorHint="#BDC3C7"
                android:theme="@style/EditTextStyle"
                app:passwordToggleEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:startIconDrawable="@drawable/ic_baseline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/xacnhanText"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textColorHint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regisBtn"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/rounded_corner_button"

                android:fontFamily="@font/roboto_medium"
                android:padding="12dp"
                android:text="CREATE"
                android:textColor="#FFFFFF"
                android:textFontWeight="500"
                android:textSize="16dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"

                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/notRegText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:text="Already have an account?"
                    android:textColor="#000000"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingLeft="5dp"
                    android:text="Login here"
                    android:textColor="#3867D6"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/logText"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>