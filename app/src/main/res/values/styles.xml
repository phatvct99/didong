<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:colorControlNormal">#ffffff</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlHighlight">#ffffff</item>
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="customRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        ... // Additional customizations</style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#BDC3C7</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@android:color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinnertheme_spinner_background</item>
    </style>

</resources>